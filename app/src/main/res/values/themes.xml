<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="NightAdjusted.Theme.Kanade" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:windowLightNavigationBar" tools:targetApi="27">true</item>
    </style>

    <style name="PlatformAdjusted.Theme.Kanade" parent="NightAdjusted.Theme.Kanade">
        <item name="android:statusBarColor">#000</item>
    </style>

    <!-- The final theme we use -->
    <style name="Theme.Kanade" parent="PlatformAdjusted.Theme.Kanade" />

    <style name="NightAdjusted.Theme.Splash" parent="Theme.SplashScreen">
        <item name="android:windowLightNavigationBar" tools:targetApi="27">true</item>
    </style>

    <style name="Theme.Kanade.Splash" parent="NightAdjusted.Theme.Splash">
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_splash</item>
        <item name="postSplashScreenTheme">@style/Theme.Kanade</item>
    </style>

</resources>
